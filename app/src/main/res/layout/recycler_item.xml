<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textName"
            android:layout_alignBottom="@+id/textName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textValue"
            android:layout_alignBottom="@+id/textValue"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="21dp"
            android:layout_toLeftOf="@+id/textValue"
            android:layout_toRightOf="@+id/textCategory"
            android:layout_toStartOf="@+id/textValue"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textValue"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextValue"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/textDeadline"
            android:layout_toStartOf="@+id/textDeadline"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textDeadline"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/TextKategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textCategory"
            android:layout_alignEnd="@+id/textCategory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textCategory"
            android:layout_toStartOf="@+id/textName"
            android:gravity="center"
            android:text="Катег."
            android:textSize="20sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/TextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textName"
            android:layout_alignEnd="@+id/textName"
            android:layout_alignLeft="@+id/textName"
            android:layout_alignRight="@+id/textName"
            android:layout_alignStart="@+id/textName"
            android:gravity="center"
            android:text="Назв."
            android:textSize="20sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/TextValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textValue"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textValue"
            android:layout_toEndOf="@+id/textName"
            android:layout_toRightOf="@+id/textName"
            android:gravity="center"
            android:text="Цена"
            android:textSize="20sp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textValue"
            android:layout_alignLeft="@+id/textDeadline"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textDeadline"
            android:layout_toEndOf="@+id/textValue"
            android:gravity="center"
            android:text="Дата"
            android:textSize="20sp"
            android:textStyle="normal|italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>